<header>
    <div class="header-menu">
        <div class="row">
            <div class="col-3">
                <a href="{{ path('homepage') }}" title="Zurück zur Startseite"><img src="/images/logo.png" alt="„Jurassic Jeep“ Logo" /></a>
            </div>
            {% if show_social_menu ?? true %}
                <div class="col-9">
                    <div class="social">
                        <a href="{{ social_facebook }}" title="Folge dem Jeep auf Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="{{ social_instagram }}" title="Folge dem Jeep auf Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="{{ social_youtube }}" title="Folge dem Jeep auf YouTube"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="mood-image">
        <img src="{{ mood_image_url }}" alt="{{ mood_image_alt }}" class="img-fluid" {% if remove_border ?? false %}style="border: none !important;"{% endif %}/>
    </div>
</header>
