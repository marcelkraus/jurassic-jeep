{% extends 'base.html.twig' %}

{% set title            = 'Mein „Jurassic Park“-Jeep am KINOPOLIS in Bad Godesberg' %}
{% set description      = 'Am Startwochenende des dritten Teils der „Jurassic World“-Reihe steht der Jeep vor den Türen des KINOPOLIS Bad Godesberg als Fotomotiv zur Verfügung.' %}
{% set mood_image_src   = '/images/kampagnen/kinopolis-kinostart-2022.jpg' %}
{% set mood_image_alt   = 'Seitenansicht eines „Jurassic Park“-Jeeps als Teaserbild für eine Veranstaltung im KINOPOLIS Bad Godesberg im Juni 2022' %}

{% block canvas %}
    <div id="canvas">
        {{ include('header.html.twig', { 'show_social_menu': false, 'remove_border': true }) }}
        <main style="margin-top: 4rem;">
            <div class="row">
                <div class="col-sm-4">
                    <div class="text-center">
                        <p style="margin-bottom: 0.5rem;"><a href="{{ social_facebook }}" title="Folge dem Jeep auf Facebook"><img src="/images/social-media-icons/facebook.svg" width="80" height="80"></a></p>
                        <h3 style="color: #136EB2">@jurassicjeep.de</h3>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="text-center">
                        <p style="margin-bottom: 0.5rem;"><a href="{{ social_instagram }}" title="Folge dem Jeep auf Instagram"><img src="/images/social-media-icons/instagram.svg" width="80" height="80"></a></p>
                        <h3 style="color: #E95399">@jurassicjeep.de</h3>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="text-center">
                        <p style="margin-bottom: 0.5rem;"><a href="{{ social_youtube }}" title="Folge dem Jeep auf YouTube"><img src="/images/social-media-icons/youtube.svg" width="80" height="80"></a></p>
                        <h3 style="color: #AC2702">Jurassic Jeep</h3>
                    </div>
                </div>
            </div>
            <div class="cta-button">
                <a href="{{ path('homepage') }}">Zur Homepage</a>
            </div>
        </main>
    </div>
{% endblock %}
